<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/main_layout_padding">

    <TextView
        android:id="@+id/dl_tv_session_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show session number : "
        android:textSize="12sp"/>

    <Button
        android:id="@+id/dl_btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="OK"/>

    <Button
        android:id="@+id/dl_btn_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/dl_btn_ok"
        android:text="select all"/>

    <Button
        android:id="@+id/dl_btn_deselect_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/dl_btn_select_all"
        android:text="deselect all"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dl_rv_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="true"
        android:layout_marginTop="10dp"
        android:layout_below="@id/dl_tv_session_number"
        android:layout_above="@id/dl_btn_ok"/>
</RelativeLayout>